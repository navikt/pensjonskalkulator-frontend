{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "schemaTypes", "static"],
  "outExtensions": { ".js": ".cjs" }
}
